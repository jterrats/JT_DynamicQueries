source "https://rubygems.org"

# Jekyll core - Use version compatible with GitHub Pages
# GitHub Pages currently uses Jekyll 3.9.x, but 4.3 works too
gem "jekyll", "~> 4.3"

# Markdown processor (GitHub Pages uses kramdown)
gem "kramdown", "~> 2.4"
gem "kramdown-parser-gfm", "~> 1.1"

# Disable Sass processing - site uses plain CSS
# This avoids native extension issues with sassc/ffi

