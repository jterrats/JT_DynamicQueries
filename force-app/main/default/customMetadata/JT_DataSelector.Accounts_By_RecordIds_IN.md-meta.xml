    <label>Accounts By Record IDs (IN)</label>
    <protected>false</protected>
    <values>
        <field>JT_BaseQuery__c</field>
        <value
      xsi:type="xsd:string"
    >SELECT Id, Name, Industry, Type, Phone, Website 
FROM Account 
WHERE Id IN :recordIds 
ORDER BY Name</value>
    </values>
    <values>
        <field>JT_Bindings__c</field>
        <value xsi:type="xsd:string">{
  &quot;recordIds&quot;: {
    &quot;type&quot;: &quot;List&lt;Id&gt;&quot;,
    &quot;required&quot;: true,
    &quot;description&quot;: &quot;List of Account IDs to retrieve&quot;
  }
}</value>
    </values>
    <values>
        <field>JT_ObjectName__c</field>
        <value xsi:type="xsd:string">Account</value>
    </values>
</CustomMetadata>
